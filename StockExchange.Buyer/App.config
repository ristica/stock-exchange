<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <system.serviceModel>

    <client>
      <endpoint address="net.tcp://localhost:3000/StockService"
                binding="netTcpBinding"
                contract="StockExchange.Contracts.IStockService" />
      <endpoint address="net.tcp://localhost:3001/PubSubService"
                binding="netTcpBinding"
                contract="StockExchange.Contracts.IPubSubService"
                bindingConfiguration="pubSubBinding" />
    </client>

    <bindings>
      <netTcpBinding>
        <binding maxReceivedMessageSize="2000000"
                 sendTimeout="00:45:00" />
        <binding name="pubSubBinding"
                 receiveTimeout="infinite" />
      </netTcpBinding>
    </bindings>

  </system.serviceModel>

  
  <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
</configuration>